    [ \
      <script>
        var input = $flag
        var hashed = CryptoJS.SHA512(input).toString(CryptoJS.enc.Base64);
        $success = "nlntdgJzFCnZID6EUCqRzVdK1CmYJpCZ+AvOLyMf5tLn5byhu+EwmFWLyiWDGlWjKlJZ6qEAFYxa6Ux8RH+dmA==" == hashed
