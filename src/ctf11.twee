      (if: $success is true)[  
        (alert: "Correct Flag!") \
      (unless: $ctfs contains "ctf11")[  \
        (set: $ctfs to it + (a: "ctf11"))]]  \
      (unless: $success is true)[ \
        (alert: "Incorrect Flag, please try again!")]  \
      (if: $success is true)[  \
        (if: $playingStory is true)[  \
